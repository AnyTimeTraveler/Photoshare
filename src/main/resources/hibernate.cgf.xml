<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
<session-factory>
    <property name="hibernate.dialect">org.hibernate.dialect.PostgreSQL82Dialect</property>
    <property name="hibernate.connection.driver_class">org.postgresql.Driver</property>
    <property name="hibernate.connection.username">photoshare</property>
    <property name="hibernate.connection.password">photoshare</property>
    <property name="hibernate.connection.url">jdbc:postgresql://localhost:5432/photoshare</property>

    <property name="connection_pool_size">1</property>
    <property name="hbm2ddl.auto">create</property>
    <property name="show_sql">true</property>
    <mapping class="org.simonscode.photoshare.objects.User" />
    <mapping class="org.simonscode.photoshare.objects.Photo" />
    <mapping class="org.simonscode.photoshare.objects.Tag" />
    <mapping class="org.simonscode.photoshare.objects.TagData" />
    <mapping class="org.simonscode.photoshare.objects.TagType" />
</session-factory>
</hibernate-configuration>
